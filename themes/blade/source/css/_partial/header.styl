header-padding-normal = 10px
header-padding-max = 30px
logo-size = 50px

$header-height = 40px

#header
    clearfix()
    -webkit-backdrop-filter saturate(180%) blur(20px)
    backdrop-filter saturate(180%) blur(20px)
    background-color #4d9c26
    //box-shadow 0 0 1px rgba(0,0,0,.25)
    box-shadow 0 0 5px rgba(0,0,0,.5);
    transition background-color .3s ease-in-out
    padding 15px 60px
    position: sticky
    position: -webkit-sticky
    width: 100%
    top: 0
    z-index 2
    a
        color: #333
        text-decoration: none
    h1
      padding: 0
      margin: 0
      a
        color: $color-art
  @media print
    display: none
#page-home #header
     position: relative
     box-shadow: none
     background-color $color-art
     #lang-select-label *
        color: #FFF
     a, h1 a
         color: #FFF
#logo-wrap
    text-align: center
    font-size: 1.5em;
    font-weight: normal;
    a
        text-decoration: none
    @media $mq-normal
        float: left
#main-nav
    float: right
    line-height: 1.5em;
    display: none
    a
        display inline-block
        position relative
        top: 2px
        margin 0 .6em
    @media $mq-normal
        display: block

.main-nav-link
    &:hover, &.current
        border-bottom 3px solid $color-art


#search-input-wrap
    display: none
    position: relative
    vertical-align: middle
    &.on
        display: inline-block
#search-input-icon
  position: absolute
  left: 10px
  top: 0px
  z-index: 1
  line-height: 1.8em
  display: inline-block
  opacity: 0.7
  color: #e3e3e3

#search-input
  width: 10em
  height: 1.8em
  line-height: 1.8em
  border-radius: 1em
  padding-left: 28px
  padding-right: 10px
  border: 1px solid #e3e3e3
  vertical-align: middle
  margin-bottom: -3px
  margin-right: 20px
  font-size: inherit
  font-family: $font-title
  outline: none
  -webkit-appearance: none
  &:focus
    border-color: $color-art

#lang-select-wrap
  display: none
  position: relative
  float: right
  line-height: 1.8em
  margin-left: 20px
  @media $mq-normal
        display: block

#lang-select-label
  opacity: 0.7
  font-family: $font-title
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  -webkit-appearance: menulist-button
  font-size: inherit
